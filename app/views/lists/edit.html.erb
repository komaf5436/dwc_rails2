<h1>編集画面</h1>

<!--url:'update_list'へフォームの情報を送信する-->
<!--method: :patch HTTPメソッドをpatchで指定-->
<%= form_with model: @list, url: update_list_path(@list.id), method: :patch do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>本文</h4>
  <%= f.text_area :body %>
  
  <%= f.submit '保存' %>
  
<% end %>
